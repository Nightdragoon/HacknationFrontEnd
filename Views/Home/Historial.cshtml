    <style>
        /* ===== HISTORY PAGE STYLES ===== */
        .history-container {
            padding: 60px 20px;
            max-width: 1200px;
            margin: 0 auto;
        }

        .history-header {
            text-align: center;
            margin-bottom: 50px;
            animation: fadeInDown 0.8s ease;
        }

        .history-title {
            font-family: 'Jua', cursive;
            font-size: 48px;
            background: linear-gradient(90deg, #3C55E6 0%, #E20262 50%, #FF7401 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            margin-bottom: 15px;
            font-weight: bold;
        }

        .history-subtitle {
            font-size: 16px;
            color: #666;
        }

        /* ===== NOT LOGGED IN STATE ===== */
        .not-logged-in {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            min-height: 400px;
            text-align: center;
            animation: slideUp 0.6s ease;
        }

        .not-logged-icon {
            font-size: 80px;
            color: #A373D7;
            margin-bottom: 20px;
        }

        .not-logged-title {
            font-size: 32px;
            color: #512479;
            font-weight: 700;
            margin-bottom: 15px;
            font-family: 'Jua', cursive;
        }

        .not-logged-text {
            font-size: 16px;
            color: #666;
            max-width: 500px;
            margin-bottom: 30px;
            line-height: 1.8;
        }

        .btn-login-redirect {
            background: linear-gradient(90deg, #FF7401 0%, #E20262 47%, #3C55E6 100%);
            color: white;
            border: none;
            padding: 14px 40px;
            border-radius: 30px;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            gap: 10px;
        }

            .btn-login-redirect:hover {
                transform: translateY(-3px);
                box-shadow: 0 8px 24px rgba(255, 116, 1, 0.4);
                color: white;
                text-decoration: none;
            }

        /* ===== LOGGED IN STATE ===== */
        .logged-in {
            display: none;
        }

            .logged-in.active {
                display: block;
                animation: fadeIn 0.6s ease;
            }

        /* ===== SEARCH BAR ===== */
        .history-search {
            margin-bottom: 40px;
        }

        .search-input-group {
            position: relative;
            max-width: 500px;
            margin: 0 auto;
        }

            .search-input-group input {
                width: 100%;
                padding: 14px 50px 14px 18px;
                border: 2px solid #E8E8E8;
                border-radius: 12px;
                font-size: 15px;
                transition: all 0.3s ease;
                font-family: 'Inter', sans-serif;
            }

                .search-input-group input:focus {
                    outline: none;
                    border: 2px solid transparent;
                    background: linear-gradient(white, white) padding-box, linear-gradient(90deg, #3C55E6 0%, #E20262 50%, #FF7401 100%) border-box;
                    box-shadow: 0 8px 24px rgba(60, 85, 230, 0.15);
                }

                .search-input-group input::placeholder {
                    color: #B0B0B0;
                }

        .search-icon {
            position: absolute;
            right: 15px;
            top: 50%;
            transform: translateY(-50%);
            color: #999;
            font-size: 18px;
            pointer-events: none;
        }

        /* ===== CHAT HISTORY GRID ===== */
        .chat-history-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
            gap: 20px;
            margin-bottom: 40px;
        }

        .chat-card {
            background: white;
            border-radius: 16px;
            padding: 20px;
            border: 2px solid #E8E8E8;
            cursor: pointer;
            transition: all 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
            animation: slideUp 0.6s ease-out;
        }

            .chat-card:hover {
                border: 2px solid transparent;
                background: linear-gradient(white, white) padding-box, linear-gradient(90deg, #3C55E6 0%, #E20262 50%, #FF7401 100%) border-box;
                box-shadow: 0 12px 40px rgba(60, 85, 230, 0.2);
                transform: translateY(-8px);
            }

        .chat-card-header {
            display: flex;
            justify-content: space-between;
            align-items: start;
            margin-bottom: 15px;
        }

        .chat-card-title {
            font-size: 18px;
            font-weight: 700;
            color: #3C55E6;
            max-width: 70%;
            word-wrap: break-word;
            font-family: 'Inter', sans-serif;
        }

        .chat-card-badge {
            background: linear-gradient(90deg, #FF7401 0%, #E20262 100%);
            color: white;
            padding: 4px 12px;
            border-radius: 20px;
            font-size: 12px;
            font-weight: 600;
            white-space: nowrap;
        }

        .chat-card-preview {
            font-size: 14px;
            color: #666;
            line-height: 1.6;
            margin-bottom: 15px;
            display: -webkit-box;
            -webkit-box-orient: vertical;
            overflow: hidden;
            min-height: 40px;
        }

        .chat-card-footer {
            display: flex;
            justify-content: space-between;
            align-items: center;
            border-top: 1px solid #E8E8E8;
            padding-top: 12px;
            font-size: 13px;
            color: #999;
        }

        .chat-card-date {
            display: flex;
            align-items: center;
            gap: 5px;
        }

        .chat-card-actions {
            display: flex;
            gap: 10px;
        }

        .chat-action-btn {
            background: transparent;
            border: none;
            color: #999;
            cursor: pointer;
            font-size: 16px;
            transition: all 0.2s ease;
            padding: 0;
            display: flex;
            align-items: center;
            justify-content: center;
        }

            .chat-action-btn:hover {
                color: #3C55E6;
                transform: scale(1.2);
            }

            .chat-action-btn.delete:hover {
                color: #E20262;
            }

        /* ===== EMPTY STATE ===== */
        .empty-state {
            text-align: center;
            padding: 60px 20px;
            display: none;
        }

            .empty-state.show {
                display: block;
                animation: slideUp 0.6s ease;
            }

        .empty-icon {
            font-size: 60px;
            color: #A373D7;
            margin-bottom: 20px;
        }

        .empty-title {
            font-size: 24px;
            color: #512479;
            font-weight: 700;
            margin-bottom: 10px;
            font-family: 'Jua', cursive;
        }

        .empty-text {
            font-size: 15px;
            color: #666;
            margin-bottom: 20px;
        }

        /* ===== PAGINATION ===== */
        .pagination-controls {
            display: flex;
            justify-content: center;
            gap: 10px;
            margin-top: 40px;
        }

        .pagination-btn {
            background: white;
            border: 2px solid #E8E8E8;
            color: #3C55E6;
            padding: 10px 16px;
            border-radius: 8px;
            cursor: pointer;
            font-weight: 600;
            transition: all 0.3s ease;
        }

            .pagination-btn:hover:not(:disabled) {
                background: #3C55E6;
                color: white;
                border-color: #3C55E6;
            }

            .pagination-btn:disabled {
                opacity: 0.5;
                cursor: not-allowed;
            }

        /* ===== ANIMATIONS ===== */
        @@keyframes fadeInDown {
            from {
                opacity: 0;
                transform: translateY(-30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }

        {
            opacity: 0;
            transform: translateY(-30px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }

        @@keyframes slideUp {
            from

        {
            opacity: 0;
            transform: translateY(30px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }

        @@keyframes fadeIn {
            from

        {
            opacity: 0;
        }

        to {
            opacity: 1;
        }

        }

        /* ===== RESPONSIVE ===== */
        @@media (max-width: 768px) {
            .history-title

        {
            font-size: 36px;
        }

        .chat-history-grid {
            grid-template-columns: 1fr;
            gap: 15px;
        }

        .history-container {
            padding: 40px 15px;
        }

        }

        @@media (max-width: 480px) {
            .history-title

        {
            font-size: 28px;
        }

        .chat-card-title {
            max-width: 100%;
        }

        .not-logged-title {
            font-size: 24px;
        }

        }
    </style>
}
<!-- ===== HISTORY CONTAINER ===== -->
<div class="history-container">
    <!-- ===== HEADER ===== -->
    <div class="history-header">
        <h1 class="history-title">Chat History</h1>
        <p class="history-subtitle">Manage and review all your research conversations</p>
    </div>

    <!-- ===== NOT LOGGED IN STATE ===== -->
    <div id="notLoggedInState" class="not-logged-in">
        <div class="not-logged-icon">
            <iconify-icon icon="mdi:lock-outline"></iconify-icon>
        </div>
        <div class="not-logged-title">Access Denied</div>
        <p class="not-logged-text">
            You need to sign in to access your chat history.
            Log in with your account to view and manage all your research conversations.
        </p>
        <button class="btn-login-redirect" onclick="redirectToLogin()">
            <iconify-icon icon="mdi:login"></iconify-icon>
            Sign In Now
        </button>
    </div>

    <!-- ===== LOGGED IN STATE ===== -->
    <div id="loggedInState" class="logged-in">
        <!-- Search Bar -->
        <div class="history-search">
            <div class="search-input-group">
                <input type="text"
                       placeholder="Search conversations..."
                       id="searchInput"
                       onkeyup="searchChats()">
                <span class="search-icon">
                    <iconify-icon icon="mdi:magnify"></iconify-icon>
                </span>
            </div>
        </div>

        <!-- Chat History Grid -->
        <div class="chat-history-grid" id="chatHistoryGrid">
            <!-- Chats will be populated here -->
        </div>

        <!-- Empty State -->
        <div class="empty-state" id="emptyState">
            <div class="empty-icon">
                <iconify-icon icon="mdi:chat-outline"></iconify-icon>
            </div>
            <div class="empty-title">No Chats Yet</div>
            <p class="empty-text">Start a new research conversation to see your history here</p>
            <a href="index.html" class="btn-login-redirect">
                <iconify-icon icon="mdi:plus"></iconify-icon>
                Start New Research
            </a>
        </div>

        <!-- Pagination -->
        <div class="pagination-controls" id="paginationControls" style="display: none;">
            <button class="pagination-btn" id="prevBtn" onclick="previousPage()">
                <iconify-icon icon="mdi:chevron-left"></iconify-icon>
                Previous
            </button>
            <span id="pageInfo" style="display: flex; align-items: center; color: #666; font-weight: 600;">
                Page 1 of 1
            </span>
            <button class="pagination-btn" id="nextBtn" onclick="nextPage()">
                Next
                <iconify-icon icon="mdi:chevron-right"></iconify-icon>
            </button>
        </div>
    </div>
</div>
