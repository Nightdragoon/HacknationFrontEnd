    <script>
        const urlCrearConversacion = '@ConfigurationUrl.GetBaseUrl()/conversation';
        const urlChecarConversacion = '@ConfigurationUrl.GetBaseUrl()/desarrolloConversacion'
    </script>
    <script>
                 let isLoading = false;
                let selectedFile = null;
                let currentCharacterIndex = 0;

                const characters = [
                    { name: 'Lobo', index: 0, color: 'blue' },
                    { name: 'Ajolote', index: 1, color: 'pink' },
                    { name: 'Quetzal', index: 2, color: 'orange' },
                    { name: 'Jaguar', index: 3, color: 'purple' }
                ];

                const characterData = {
                    'Lobo': {
                        response: "I've conducted a comprehensive analysis of your research data using advanced algorithms and machine learning models. The dataset demonstrates strong correlations between key variables, revealing clear patterns that align with our initial hypothesis. Our processing pipeline identified 87% data accuracy with optimal confidence levels. The patterns suggest significant opportunities for further investigation and optimization across multiple dimensions of your research framework."
