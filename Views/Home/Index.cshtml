                    },
                    'Jaguar': {
                        response: "Perfect results across all dimensions! Our comprehensive analysis has yielded valuable insights that position your research for strategic advancement. We've developed 12 key recommendations with high implementation priority that could drive 34% expected impact. The combined analysis from our entire team provides a complete picture of your data landscape, identifying opportunities for innovation and improvement. These insights are ready for immediate implementation with strong confidence in their effectiveness."
                    }
                };

                function handleFileSelect(event) {
                    const file = event.target.files[0];
                    if (file) {
                        selectedFile = file;
                        document.getElementById('fileName').textContent = file.name;
                        document.getElementById('fileName').classList.add('has-file');
                        document.getElementById('removeFileBtn').style.display = 'flex';
                    }
                }

                function removeFile() {
                    selectedFile = null;
                    document.getElementById('fileInput').value = '';
                    document.getElementById('fileName').textContent = 'No file selected';
                    document.getElementById('fileName').classList.remove('has-file');
                    document.getElementById('removeFileBtn').style.display = 'none';
                }

            async function sendMessage(id) {
            const input = document.getElementById('searchInput');
            const message = input.value.trim();

            if (!message && !selectedFile) {
                Swal.fire({
                    title: "oh oo theres nothing here",
                   text: "Please write a message or attach a file!",
                   icon: "warning"
                 });
               
                return;
            }

            if (isLoading) return;

            isLoading = true;
            currentCharacterIndex = 0;

            showLoadingMessage();
            const cardsOverlay = document.getElementById('cardsOverlay');
            cardsOverlay.classList.add('active');

            input.value = '';
            let id_con = await iniciarConversacion(id , message);
            let result = setInterval(() => checarConversacion(id_con), 2000);
        ;

            setTimeout(() => {
                hideLoadingMessage();
                showDiscussionMessage();

                if (selectedFile) removeFile();

                // Mostrar las tablas
                document.getElementById('tablesSectionContainer').style.display = 'block';


            }, 30000);
        }        function startSequentialAnalysis() {
                    currentCharacterIndex = 0;
                    analyzeNextCharacter();
                }

                function analyzeNextCharacter() {
            if (currentCharacterIndex < characters.length) {
                const character = characters[currentCharacterIndex];
                const data = characterData[character.name];

                // Actualizar el estado del header
                const statusEl = document.getElementById(`${character.name.toLowerCase()}-status`);
                statusEl.textContent = 'Analyzing...';
                statusEl.style.color = '#FF7401';

                // Mostrar el texto de la burbuja
                updateSpeechBubble(character.index, character.name + " is sharing insights...");

                // Llenar el texto con animación
                fillTextAnimated(character.name, data.response, () => {
                    // Cambiar gif a png
                    const iconEl = document.getElementById(`${character.name.toLowerCase()}-icon`);
                    const imgElement = iconEl.querySelector('img');
                    const gifName = imgElement.src.split('/').pop().split('.')[0];
                    imgElement.src = gifName + '.png';
                    iconEl.classList.remove('talking-animation');

                    // Actualizar estado
                    statusEl.textContent = 'Complete';
                    statusEl.style.color = '#3C55E6';

                    currentCharacterIndex++;


                    if (currentCharacterIndex < characters.length) {
                        // Si hay más caracteres, esperar 2 segundos y continuar
                        setTimeout(() => analyzeNextCharacter(), 2000);
                    } else {
                        //  Cuando termina el ÚLTIMO carácter, mostrar el reporte
                        setTimeout(() => {
                            hideDiscussionMessage();
                            document.getElementById('cardsOverlay').classList.remove('active');
                            showReport();
                            isLoading = false;
                        }, 2000);
                    }
                });
            }
        }

                function fillTextAnimated(characterName, fullText, callback) {
                    const textEl = document.getElementById(`${characterName.toLowerCase()}-text`);
                    textEl.textContent = '';

                    let charIndex = 0;
                    const speed = 5; // velocidad en ms por carácter

                    function typeCharacter() {
                        if (charIndex < fullText.length) {
                            textEl.textContent += fullText[charIndex];
                            charIndex++;
                            setTimeout(typeCharacter, speed);
                        } else {
                            if (callback) callback();
                        }
                    }

                    typeCharacter();
                }

                function updateSpeechBubble(cardIndex, text) {
                    const bubbleClasses = ['speech-bubble-1', 'speech-bubble-2', 'speech-bubble-3', 'speech-bubble-4'];
                    const targetBubble = document.querySelector(`.${bubbleClasses[cardIndex]}`);
                    if (targetBubble) {
                        targetBubble.style.animation = 'none';
                        setTimeout(() => {
                            targetBubble.textContent = text;
                            targetBubble.style.animation = 'speechPop 0.4s cubic-bezier(0.34, 1.56, 0.64, 1)';
                        }, 10);
                    }
                }

                function getBorderColor(color) {
                    const colors = {
                        'blue': '#3C55E6',
                        'pink': '#E20262',
                        'orange': '#FF7401',
                        'purple': '#A373D7'
                    };
                    return colors[color] || '#3C55E6';
                }

                function showLoadingMessage() { document.getElementById('loadingMessage').style.display = 'flex'; }
                function hideLoadingMessage() { document.getElementById('loadingMessage').style.display = 'none'; }
                function showDiscussionMessage() { document.getElementById('discussionMessage').style.display = 'flex'; }
                function hideDiscussionMessage() { document.getElementById('discussionMessage').style.display = 'none'; }

                document.getElementById('searchInput').addEventListener('keypress', function(e) {
                    if (e.key === 'Enter') sendMessage();
                });

                window.addEventListener('load', function() {
                    document.getElementById('searchInput').focus();
                });

                function showReport() {
                    document.getElementById('reportSection').style.display = 'block';
                }

                function closeReport() {
                    document.getElementById('reportSection').style.display = 'none';
                    document.getElementById('tablesSectionContainer').style.display = 'none';
                    document.getElementById('cardsOverlay').classList.remove('active');
                    isLoading = false;
                }

                function downloadReport() {
                    const btn = event.target.closest('.btn-download');
                    const originalHTML = btn.innerHTML;

                    btn.innerHTML = '<iconify-icon icon="mdi:loading" class="spin-icon"></iconify-icon><span>Downloading...</span>';
                    btn.disabled = true;

                    setTimeout(() => {
                        const reportContent = document.querySelector('.report-container').innerText;
                        const element = document.createElement('a');
                        element.setAttribute('href', 'data:text/plain;charset=utf-8,' + encodeURIComponent(reportContent));
                        element.setAttribute('download', 'Zan-AI-Report-' + new Date().getTime() + '.txt');
                        element.style.display = 'none';
                        document.body.appendChild(element);
                        element.click();
                        document.body.removeChild(element);

                        btn.innerHTML = '<iconify-icon icon="mdi:check-circle"></iconify-icon><span>Downloaded!</span>';
                        setTimeout(() => {
